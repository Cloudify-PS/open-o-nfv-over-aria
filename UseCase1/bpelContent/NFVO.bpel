        </bpel:assign>
        <bpel:invoke name="invokeAria" partnerLink="aria" operation="Install" portType="aria:ARIA" inputVariable="ariaInput" outputVariable="ariaOutput">
        </bpel:invoke>
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:NFVO"
               operation="process" 
               variable="output"
               />
