        </bpel:variable>
        <bpel:variable name="ariaOutput" messageType="aria:InstallResponse">
            <bpel:from partnerLink="aria" endpointReference="partnerRole"></bpel:from>
        </bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
